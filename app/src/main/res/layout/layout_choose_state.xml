<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lcsLayout">

    <TextView android:id="@+id/lcsTvName"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:minHeight="60dp" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" android:paddingStart="16dp"
              app:layout_constraintBottom_toBottomOf="parent" android:paddingTop="8dp"
              app:layout_constraintTop_toTopOf="parent" android:paddingEnd="12dp"
              android:paddingBottom="8dp" android:textSize="16sp"
              android:fontFamily="@font/open_sans"
              android:gravity="center_vertical"
              android:background="@drawable/selector_bg_choose_state"/>

    <View
            android:id="@+id/lcsVDivider" android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/lcsTvName"/>

</androidx.constraintlayout.widget.ConstraintLayout>